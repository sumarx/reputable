<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Thank You - <%= @location.name %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>

  <body class="bg-gray-50 font-sans antialiased">
    <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
      <div class="max-w-md w-full space-y-8">
        <div class="text-center">
          <div class="mx-auto h-16 w-16 bg-green-500 rounded-full flex items-center justify-center">
            <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>

          <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
            Thank You! üéâ
          </h2>

          <p class="mt-4 text-lg text-gray-600">
            We're so glad you had a great experience at <strong class="text-gray-900"><%= @location.name %></strong>!
          </p>
        </div>

        <div class="bg-white py-8 px-6 shadow rounded-lg sm:px-10 space-y-6">
          <% if @campaign_response.feedback.present? %>
            <div>
              <p class="text-sm font-medium text-gray-700 mb-2">Your review:</p>
              <div id="review-text" class="bg-gray-50 border border-gray-200 rounded-lg p-4 text-gray-800 text-sm leading-relaxed">
                <%= @campaign_response.feedback %>
              </div>
            </div>

            <!-- Copy status -->
            <div id="copy-status" class="flex items-center justify-center gap-2 text-sm text-green-600 font-medium hidden">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Review copied to clipboard!</span>
            </div>

            <!-- Copy button -->
            <button id="copy-btn" onclick="copyReview()" class="w-full flex items-center justify-center gap-2 px-4 py-2.5 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors cursor-pointer">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
              <span id="copy-btn-text">Copy Review</span>
            </button>
          <% end %>

          <div class="border-t border-gray-200 pt-6">
            <p class="text-gray-700 text-center text-sm font-medium mb-4">
              <%= @campaign_response.feedback.present? ? "Now paste it on #{@campaign.redirect_platform.capitalize} to help others find us!" : "Would you mind sharing your review on #{@campaign.redirect_platform.capitalize}?" %>
            </p>

            <a href="<%= @redirect_url %>"
               target="_blank"
               rel="noopener noreferrer"
               onclick="trackClick()"
               id="post-external-btn"
               class="inline-flex items-center justify-center w-full px-6 py-3 text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700 rounded-lg shadow-sm transition-colors cursor-pointer">
              <% case @campaign.redirect_platform %>
              <% when "google" %>
                <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 0 1-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z" fill="#fff"/>
                  <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#fff" opacity="0.8"/>
                  <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#fff" opacity="0.6"/>
                  <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#fff" opacity="0.9"/>
                </svg>
                Post on Google
              <% when "facebook" %>
                üìò Post on Facebook
              <% when "tripadvisor" %>
                ü¶â Post on TripAdvisor
              <% when "yelp" %>
                ‚≠ê Post on Yelp
              <% else %>
                Post Your Review
              <% end %>
            </a>
          </div>
        </div>

        <div class="text-center">
          <p class="text-xs text-gray-500">
            Powered by <strong class="text-indigo-600">RepuTable</strong>
          </p>
        </div>
      </div>
    </div>

    <script>
      function trackClick() {
        var csrfToken = document.querySelector('meta[name="csrf-token"]');
        fetch('<%= public_campaign_track_click_path(@campaign.slug) %>', {
          method: 'POST',
          headers: {
            'X-CSRF-Token': csrfToken ? csrfToken.content : '',
            'Content-Type': 'application/x-www-form-urlencoded'
          },
          body: 'response_id=<%= @campaign_response.id %>'
        }).catch(function() {});
      }

      // Auto-copy on page load
      document.addEventListener('DOMContentLoaded', function() {
        var reviewEl = document.getElementById('review-text');
        if (reviewEl) {
          var text = reviewEl.innerText.trim();
          if (text && navigator.clipboard) {
            navigator.clipboard.writeText(text).then(function() {
              showCopyStatus();
            }).catch(function() {
              // Clipboard API may fail on non-HTTPS ‚Äî ignore silently
            });
          }
        }
      });

      function copyReview() {
        var reviewEl = document.getElementById('review-text');
        if (!reviewEl) return;

        var text = reviewEl.innerText.trim();

        if (navigator.clipboard) {
          navigator.clipboard.writeText(text).then(function() {
            showCopyStatus();
          }).catch(fallbackCopy);
        } else {
          fallbackCopy();
        }
      }

      function fallbackCopy() {
        var reviewEl = document.getElementById('review-text');
        var range = document.createRange();
        range.selectNodeContents(reviewEl);
        var sel = window.getSelection();
        sel.removeAllRanges();
        sel.addRange(range);
        try {
          document.execCommand('copy');
          showCopyStatus();
        } catch (e) {}
        sel.removeAllRanges();
      }

      function showCopyStatus() {
        var status = document.getElementById('copy-status');
        var btnText = document.getElementById('copy-btn-text');
        if (status) status.classList.remove('hidden');
        if (btnText) btnText.textContent = 'Copied! ‚úì';
        setTimeout(function() {
          if (btnText) btnText.textContent = 'Copy Review';
        }, 3000);
      }
    </script>
  </body>
</html>
