<div class="bg-white py-8 px-6 shadow rounded-lg sm:px-10">
  <h2 class="text-2xl font-bold text-gray-900 mb-6">Create Your Account</h2>
  
  <%= form_with model: [@account, @user], url: registration_path, local: true, class: "space-y-6" do |form| %>
    <!-- Account Information -->
    <div>
      <h3 class="text-lg font-medium text-gray-900 mb-4">Business Information</h3>
      
      <div>
        <%= label_tag "account[name]", "Business Name", class: "block text-sm font-medium text-gray-700" %>
        <%= text_field_tag "account[name]", params.dig(:account, :name), 
            placeholder: "Masosa Cafe", 
            required: true,
            class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        <% if @account.errors[:name].any? %>
          <p class="mt-2 text-sm text-red-600"><%= @account.errors[:name].first %></p>
        <% end %>
      </div>
    </div>

    <!-- User Information -->
    <div>
      <h3 class="text-lg font-medium text-gray-900 mb-4">Your Information</h3>
      
      <div class="space-y-4">
        <div>
          <%= label_tag "user[name]", "Your Name", class: "block text-sm font-medium text-gray-700" %>
          <%= text_field_tag "user[name]", params.dig(:user, :name), 
              placeholder: "John Smith", 
              class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
          <% if @user.errors[:name].any? %>
            <p class="mt-2 text-sm text-red-600"><%= @user.errors[:name].first %></p>
          <% end %>
        </div>

        <div>
          <%= label_tag "user[email_address]", "Email Address", class: "block text-sm font-medium text-gray-700" %>
          <%= email_field_tag "user[email_address]", params.dig(:user, :email_address), 
              placeholder: "you@example.com", 
              required: true,
              class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
          <% if @user.errors[:email_address].any? %>
            <p class="mt-2 text-sm text-red-600"><%= @user.errors[:email_address].first %></p>
          <% end %>
        </div>

        <div>
          <%= label_tag "user[password]", "Password", class: "block text-sm font-medium text-gray-700" %>
          <%= password_field_tag "user[password]", "", 
              placeholder: "Enter your password", 
              required: true,
              class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
          <% if @user.errors[:password].any? %>
            <p class="mt-2 text-sm text-red-600"><%= @user.errors[:password].first %></p>
          <% end %>
        </div>

        <div>
          <%= label_tag "user[password_confirmation]", "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
          <%= password_field_tag "user[password_confirmation]", "", 
              placeholder: "Confirm your password", 
              required: true,
              class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        </div>
      </div>
    </div>

    <div>
      <%= submit_tag "Create Account", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>

  <div class="mt-6">
    <div class="text-center">
      <span class="text-sm text-gray-600">Already have an account? </span>
      <%= link_to "Sign in", new_session_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
    </div>
  </div>
</div>