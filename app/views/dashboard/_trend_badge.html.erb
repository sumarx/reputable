<% if trend.present? && trend != 0 %>
  <span class="inline-flex items-center text-[11px] font-medium <%= trend > 0 ? 'text-emerald-600' : 'text-rose-500' %>">
    <% if trend > 0 %>
      <svg class="w-3 h-3 mr-0.5" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 15.75l7.5-7.5 7.5 7.5"></path></svg>
    <% else %>
      <svg class="w-3 h-3 mr-0.5" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path></svg>
    <% end %>
    <%= trend.abs %>%
  </span>
<% end %>
