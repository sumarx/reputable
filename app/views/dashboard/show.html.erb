<% content_for :page_title, "Dashboard" %>

<div class="space-y-5">
  <%# Welcome â€” gradient hero card %>
  <div class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-indigo-600 via-indigo-700 to-purple-700 p-6 text-white">
    <div class="absolute -top-10 -right-10 w-40 h-40 bg-white/5 rounded-full"></div>
    <div class="absolute -bottom-8 -left-8 w-32 h-32 bg-white/5 rounded-full"></div>
    <div class="relative">
      <p class="text-indigo-200 text-sm mb-1">Good <%= Time.current.hour < 12 ? 'morning' : Time.current.hour < 17 ? 'afternoon' : 'evening' %> ðŸ‘‹</p>
      <h2 class="text-xl font-bold mb-1"><%= @account.name %></h2>
      <p class="text-indigo-200 text-sm">Here's your reputation snapshot for today.</p>
    </div>
  </div>

  <%# Stats â€” 2x2 grid on mobile, 4-col desktop %>
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-3">
    <%# Total Reviews %>
    <div class="bg-white rounded-xl border border-gray-100 shadow-sm p-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl bg-blue-50 flex items-center justify-center shrink-0">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path></svg>
        </div>
        <div class="min-w-0">
          <p class="text-xs text-gray-500">Reviews</p>
          <p class="text-xl font-bold text-gray-900"><%= number_with_delimiter(@stats[:total_reviews]) %></p>
        </div>
      </div>
    </div>

    <%# Average Rating %>
    <div class="bg-white rounded-xl border border-gray-100 shadow-sm p-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl bg-amber-50 flex items-center justify-center shrink-0">
          <svg class="w-5 h-5 text-amber-500" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>
        </div>
        <div class="min-w-0">
          <p class="text-xs text-gray-500">Rating</p>
          <div class="flex items-baseline gap-1">
            <p class="text-xl font-bold text-gray-900"><%= @stats[:average_rating] %></p>
            <span class="text-xs text-gray-400">/5</span>
          </div>
        </div>
      </div>
    </div>

    <%# Response Rate %>
    <div class="bg-white rounded-xl border border-gray-100 shadow-sm p-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl bg-green-50 flex items-center justify-center shrink-0">
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        </div>
        <div class="min-w-0">
          <p class="text-xs text-gray-500">Response</p>
          <p class="text-xl font-bold text-gray-900"><%= @stats[:response_rate] %><span class="text-sm font-medium">%</span></p>
        </div>
      </div>
    </div>

    <%# Sentiment %>
    <div class="bg-white rounded-xl border border-gray-100 shadow-sm p-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl bg-purple-50 flex items-center justify-center shrink-0">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path></svg>
        </div>
        <div class="min-w-0">
          <p class="text-xs text-gray-500">Sentiment</p>
          <p class="text-xl font-bold text-gray-900"><%= @stats[:sentiment_score] %><span class="text-sm font-medium">%</span></p>
        </div>
      </div>
    </div>
  </div>

  <%# Chart + Reviews side by side %>
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-5">
    <%# Rating Trend %>
    <div class="bg-white rounded-xl border border-gray-100 shadow-sm">
      <div class="px-4 py-3 border-b border-gray-100">
        <h3 class="text-sm font-semibold text-gray-900">Rating Trend</h3>
        <p class="text-xs text-gray-400">Last 30 days</p>
      </div>
      <div class="p-4">
        <%= line_chart @rating_trend_data, height: "260px", colors: ["#6366F1"], library: { scales: { y: { min: 1, max: 5 } } } %>
      </div>
    </div>

    <%# Recent Reviews %>
    <div class="bg-white rounded-xl border border-gray-100 shadow-sm">
      <div class="px-4 py-3 border-b border-gray-100 flex items-center justify-between">
        <div>
          <h3 class="text-sm font-semibold text-gray-900">Recent Reviews</h3>
          <p class="text-xs text-gray-400"><%= @stats[:total_reviews] %> total</p>
        </div>
        <%= link_to "View all â†’", reviews_path, class: "text-xs font-medium text-indigo-600 hover:text-indigo-500" %>
      </div>

      <% if @recent_reviews.any? %>
        <div class="divide-y divide-gray-50">
          <% @recent_reviews.first(5).each do |review| %>
            <%= link_to review_path(review), class: "block px-4 py-3 hover:bg-gray-50/50 transition-colors cursor-pointer" do %>
              <div class="flex items-start justify-between gap-2 mb-0.5">
                <span class="text-sm font-medium text-gray-900 truncate"><%= review.reviewer_name || "Anonymous" %></span>
                <span class="text-xs text-amber-500 whitespace-nowrap shrink-0"><%= 'â˜…' * (review.rating || 0) %><%= 'â˜†' * (5 - (review.rating || 0)) %></span>
              </div>
              <% if review.body.present? %>
                <p class="text-xs text-gray-500 line-clamp-1"><%= truncate(review.body, length: 90) %></p>
              <% end %>
              <p class="text-[11px] text-gray-400 mt-1"><%= review.platform&.capitalize %> Â· <%= time_ago_in_words(review.published_at || review.created_at) %> ago</p>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="p-8 text-center">
          <p class="text-sm text-gray-400">No reviews yet</p>
        </div>
      <% end %>
    </div>
  </div>

  <%# Campaign Performance %>
  <div class="bg-white rounded-xl border border-gray-100 shadow-sm">
    <div class="px-4 py-3 border-b border-gray-100 flex items-center justify-between">
      <div>
        <h3 class="text-sm font-semibold text-gray-900">Campaign Performance</h3>
        <p class="text-xs text-gray-400"><%= @campaign_stats[:active_campaigns] %> active campaigns</p>
      </div>
      <%= link_to "View all â†’", campaigns_path, class: "text-xs font-medium text-indigo-600 hover:text-indigo-500" %>
    </div>

    <% if @campaign_stats[:total_responses] > 0 %>
      <%# Campaign mini stats %>
      <div class="grid grid-cols-2 sm:grid-cols-4 gap-px bg-gray-100 border-b border-gray-100">
        <div class="bg-white p-3 text-center">
          <p class="text-[11px] text-gray-500">Responses</p>
          <p class="text-lg font-bold text-gray-900"><%= @campaign_stats[:total_responses] %></p>
        </div>
        <div class="bg-white p-3 text-center">
          <p class="text-[11px] text-gray-500">Sent to Review</p>
          <p class="text-lg font-bold text-green-600"><%= @campaign_stats[:total_redirects] %></p>
        </div>
        <div class="bg-white p-3 text-center">
          <p class="text-[11px] text-gray-500">Clicked to Post</p>
          <p class="text-lg font-bold text-indigo-600"><%= @campaign_stats[:total_clicked] %></p>
        </div>
        <div class="bg-white p-3 text-center">
          <p class="text-[11px] text-gray-500">Private</p>
          <p class="text-lg font-bold text-amber-600"><%= @campaign_stats[:total_responses] - @campaign_stats[:total_redirects] %></p>
        </div>
      </div>

      <%# Recent campaign feedback %>
      <% if @campaign_stats[:recent_responses].any? %>
        <div class="divide-y divide-gray-50">
          <% @campaign_stats[:recent_responses].first(4).each do |response| %>
            <%= link_to campaign_campaign_response_path(response.campaign, response), class: "block px-4 py-3 hover:bg-gray-50/50 transition-colors cursor-pointer" do %>
              <div class="flex items-start justify-between gap-2 mb-0.5">
                <span class="text-sm font-medium text-gray-900 truncate"><%= response.customer_name || "Anonymous" %></span>
                <div class="flex items-center gap-1.5 shrink-0">
                  <span class="text-xs text-amber-500"><%= 'â˜…' * (response.rating || 0) %><%= 'â˜†' * (5 - (response.rating || 0)) %></span>
                  <span class="text-[11px] text-gray-400"><%= time_ago_in_words(response.created_at) %></span>
                </div>
              </div>
              <% if response.feedback.present? %>
                <p class="text-xs text-gray-500 line-clamp-1"><%= truncate(response.feedback, length: 90) %></p>
              <% end %>
              <div class="flex items-center gap-2 mt-1">
                <p class="text-[11px] text-gray-400"><%= response.campaign.name %> Â· <%= response.campaign.location.name %></p>
                <% if response.clicked_external? %>
                  <span class="inline-flex items-center gap-0.5 text-[10px] px-1.5 py-0.5 rounded bg-green-50 text-green-700 font-medium">
                    <svg class="w-2.5 h-2.5" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path></svg>
                    Posted
                  </span>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div class="p-8 text-center">
        <p class="text-sm text-gray-400">No campaign responses yet</p>
        <p class="text-xs text-gray-300 mt-1">Create a campaign and share the QR code to start collecting feedback</p>
      </div>
    <% end %>
  </div>

  <%# Quick Actions %>
  <div class="flex flex-wrap gap-2">
    <%= link_to new_location_path, class: "inline-flex items-center gap-1.5 px-4 py-2 text-sm font-medium rounded-xl text-white bg-indigo-600 hover:bg-indigo-700 shadow-sm shadow-indigo-200 transition-all cursor-pointer" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6"></path></svg>
      Add Location
    <% end %>
    <%= link_to new_campaign_path, class: "inline-flex items-center gap-1.5 px-4 py-2 text-sm font-medium rounded-xl text-gray-700 bg-white border border-gray-200 hover:bg-gray-50 shadow-sm transition-all cursor-pointer" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"></path></svg>
      Create Campaign
    <% end %>
  </div>
</div>
