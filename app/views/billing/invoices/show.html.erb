<% content_for :page_title, "Invoice #{@invoice.number}" %>

<div class="max-w-4xl space-y-6">
  <!-- Invoice Details -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
    <div class="flex items-center justify-between mb-6">
      <div>
        <h3 class="text-xl font-semibold text-gray-900">Invoice <%= @invoice.number %></h3>
        <p class="text-sm text-gray-500">Issued on <%= @invoice.issued_at.strftime("%B %d, %Y") %></p>
      </div>
      <div class="text-right">
        <% case @invoice.status %>
        <% when 'paid' %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            Paid
          </span>
          <% if @invoice.paid_at %>
            <p class="text-xs text-gray-500 mt-1">Paid on <%= @invoice.paid_at.strftime("%B %d, %Y") %></p>
          <% end %>
        <% when 'pending' %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
            </svg>
            Payment Pending
          </span>
          <p class="text-xs text-gray-500 mt-1">Due <%= @invoice.due_at.strftime("%B %d, %Y") %></p>
        <% when 'overdue' %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
            Overdue
          </span>
          <p class="text-xs text-red-600 mt-1"><%= pluralize(@invoice.days_overdue, 'day') %> overdue</p>
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <h4 class="font-medium text-gray-900 mb-3">Bill To</h4>
        <div class="text-sm text-gray-600">
          <p class="font-medium text-gray-900"><%= Current.account.name %></p>
          <p>Account ID: <%= Current.account.id %></p>
        </div>
      </div>

      <div>
        <h4 class="font-medium text-gray-900 mb-3">Invoice Details</h4>
        <div class="text-sm text-gray-600 space-y-1">
          <div class="flex justify-between">
            <span>Subscription:</span>
            <span class="font-medium"><%= @invoice.subscription.plan.name %></span>
          </div>
          <div class="flex justify-between">
            <span>Period:</span>
            <span class="font-medium">
              <%= @invoice.subscription.current_period_start&.strftime("%m/%d/%Y") %> - 
              <%= @invoice.subscription.current_period_end&.strftime("%m/%d/%Y") %>
            </span>
          </div>
          <div class="flex justify-between">
            <span>Currency:</span>
            <span class="font-medium"><%= @invoice.currency %></span>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-8 border-t border-gray-200 pt-6">
      <div class="flex justify-between items-center mb-4">
        <h4 class="font-medium text-gray-900">Amount Due</h4>
        <p class="text-2xl font-bold text-gray-900"><%= @invoice.amount_formatted %></p>
      </div>
    </div>
  </div>

  <!-- Payment Information -->
  <% unless @invoice.paid? %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-6">Payment Information</h3>
      
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
        <div class="flex">
          <svg class="w-5 h-5 text-blue-400 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
          </svg>
          <div>
            <p class="text-sm font-medium text-blue-800 mb-1">How to Pay</p>
            <p class="text-sm text-blue-700">Transfer the amount to our bank account and upload the payment receipt below.</p>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h4 class="font-medium text-gray-900 mb-4">Bank Account Details</h4>
          <div class="bg-gray-50 rounded-lg p-4 space-y-3">
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Bank Name:</span>
              <span class="text-sm font-medium text-gray-900"><%= @bank_details[:bank_name] %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-600">Account Title:</span>
              <span class="text-sm font-medium text-gray-900"><%= @bank_details[:account_title] %></span>
            </div>
            <% if @bank_details[:account_number] %>
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">Account Number:</span>
                <span class="text-sm font-medium text-gray-900 font-mono"><%= @bank_details[:account_number] %></span>
              </div>
            <% end %>
            <% if @bank_details[:iban] %>
              <div class="flex justify-between">
                <span class="text-sm text-gray-600">IBAN:</span>
                <span class="text-sm font-medium text-gray-900 font-mono"><%= @bank_details[:iban] %></span>
              </div>
            <% end %>
          </div>
        </div>

        <div>
          <h4 class="font-medium text-gray-900 mb-4">Upload Payment Proof</h4>
          
          <% if @existing_proof %>
            <div class="mb-4 p-4 border border-gray-200 rounded-lg">
              <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-medium text-gray-900">Existing Proof</span>
                <% case @existing_proof.status %>
                <% when 'approved' %>
                  <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-green-100 text-green-800">
                    Approved
                  </span>
                <% when 'pending_review' %>
                  <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-blue-100 text-blue-800">
                    Under Review
                  </span>
                <% when 'rejected' %>
                  <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-red-100 text-red-800">
                    Rejected
                  </span>
                <% end %>
              </div>
              <p class="text-xs text-gray-500">
                Submitted <%= @existing_proof.submitted_at.strftime("%B %d, %Y at %l:%M %p") %>
              </p>
              <% if @existing_proof.admin_notes.present? %>
                <p class="text-xs text-gray-600 mt-2"><strong>Notes:</strong> <%= @existing_proof.admin_notes %></p>
              <% end %>
            </div>
          <% end %>

          <% unless @existing_proof&.approved? %>
            <%= form_with model: [@invoice, @payment_proof], url: billing_invoice_payment_proofs_path(@invoice), class: "space-y-4" do |f| %>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Payment Receipt (Image/PDF)
                </label>
                <%= f.file_field :file, accept: "image/*,application/pdf", required: true,
                    class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
                <% if @payment_proof.errors[:file].any? %>
                  <p class="mt-1 text-sm text-red-600"><%= @payment_proof.errors[:file].first %></p>
                <% end %>
              </div>
              
              <button type="submit" class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 cursor-pointer">
                Upload Payment Proof
              </button>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>