<%= form_with model: @campaign, class: "space-y-6" do |f| %>
  <% if @campaign.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
      <ul class="list-disc list-inside text-sm">
        <% @campaign.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Campaign Name *</label>
      <%= f.text_field :name, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm", required: true %>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Location *</label>
      <%= f.collection_select :location_id, @locations, :id, :name, { prompt: "Select a location" }, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm" %>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Campaign Type</label>
      <%= f.select :campaign_type, [["QR Code", "qr"], ["Email", "email"], ["SMS", "sms"]], {}, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm" %>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Redirect Platform</label>
      <%= f.select :redirect_platform, [["Google", "google"], ["Facebook", "facebook"], ["TripAdvisor", "tripadvisor"], ["Yelp", "yelp"]], {}, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm" %>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Positive Threshold (stars)</label>
      <%= f.select :positive_threshold, (1..5).to_a, {}, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm" %>
    </div>
    <div class="flex items-center pt-6">
      <%= f.check_box :active, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
      <label class="ml-2 text-sm text-gray-700">Active</label>
    </div>
  </div>

  <div class="flex gap-3">
    <%= f.submit class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 cursor-pointer" %>
    <%= link_to "Cancel", campaigns_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
  </div>
<% end %>
