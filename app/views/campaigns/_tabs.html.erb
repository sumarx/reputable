<div class="flex items-center gap-1 border-b border-gray-200 mb-5">
  <% [
    ["Analytics", analytics_campaigns_path, current_page?(analytics_campaigns_path)],
    ["Campaigns", campaigns_path, current_page?(campaigns_path)]
  ].each do |label, path, active| %>
    <%= link_to label, path,
        class: "px-4 py-2.5 text-sm font-medium border-b-2 transition-colors -mb-px #{active ? 'border-indigo-600 text-indigo-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" %>
  <% end %>
</div>
