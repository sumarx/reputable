<% content_for :page_title, "Campaigns" %>

<%= render "campaigns/tabs" %>

<div class="space-y-6">
  <div class="flex justify-end">
    <%= link_to new_campaign_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 cursor-pointer" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path></svg>
      New Campaign
    <% end %>
  </div>

  <% if @campaigns.any? %>
    <div class="space-y-4">
      <% @campaigns.each do |campaign| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 hover:shadow-md hover:border-indigo-200 transition-all">
          <%= link_to campaign_path(campaign), class: "block p-4" do %>
            <div class="flex items-start justify-between mb-2">
              <div class="flex-1 min-w-0">
                <h3 class="text-base font-semibold text-gray-900 truncate"><%= campaign.name %></h3>
                <p class="text-sm text-gray-500 mt-0.5"><%= campaign.location.name %></p>
              </div>
              <span class="ml-3 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium shrink-0 <%= campaign.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                <%= campaign.active? ? "Active" : "Inactive" %>
              </span>
            </div>

            <div class="flex items-center gap-3 text-sm">
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-indigo-100 text-indigo-800">
                <%= campaign.campaign_type.upcase %>
              </span>
              <span class="text-gray-600">
                <span class="font-medium text-gray-900"><%= campaign.responses_count %></span> responses
                <% if campaign.responses_count > 0 %>
                  <span class="text-gray-400">· <%= campaign.conversion_rate %>% → <%= campaign.redirect_platform.capitalize %></span>
                <% end %>
              </span>
            </div>
          <% end %>

          <div class="flex items-center gap-3 px-4 py-2.5 border-t border-gray-100">
            <%= link_to "View Details", campaign_path(campaign), class: "text-sm text-indigo-600 font-medium hover:text-indigo-500" %>
            <span class="text-gray-300">·</span>
            <%= link_to "Edit", edit_campaign_path(campaign), class: "text-sm text-gray-500 hover:text-gray-700" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
      <p class="text-gray-500 mb-4">No campaigns yet.</p>
      <%= link_to "Create your first campaign", new_campaign_path, class: "text-indigo-600 hover:text-indigo-500 font-medium" %>
    </div>
  <% end %>
</div>
